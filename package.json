{
	"name": "sigmaq",
	"version": "1.0.0",
	"description": "AI-Powered Assessment & Survey Platform for Modern Organizations",
	"main": "server.js",
	"license": "MIT",
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"start": "node server.js",
		"dev": "nodemon server.js",
		"lint": "eslint . --ext .js,.ts,.tsx",
		"lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"migrate": "node scripts/migrate-surveys.js",
		"migrate:auto": "node scripts/auto-migrate-surveys.js",
		"migrate:dry-run": "MIGRATION_DRY_RUN=true node scripts/auto-migrate-surveys.js",
		"migrate:analyze": "MIGRATION_DRY_RUN=true MIGRATION_LOG_LEVEL=debug node scripts/auto-migrate-surveys.js",
		"deploy:pre": "scripts/pre-deploy.sh",
		"deploy:post": "scripts/post-deploy.sh",
		"deploy:uat": "DEPLOY_ENV=uat npm run deploy:pre && npm run deploy:post",
		"deploy:prod": "DEPLOY_ENV=prod npm run deploy:pre && npm run deploy:post",
		"verify:uat": "UAT_URL=https://uat.sigmaq.co node scripts/verify-uat-deployment.js",
		"verify:prod": "UAT_URL=https://sigmaq.co node scripts/verify-uat-deployment.js"
	},
	"dependencies": {
		"axios": "^1.10.0",
		"bcrypt": "^6.0.0",
		"colors": "^1.4.0",
		"cors": "^2.8.5",
		"csv-parser": "^3.2.0",
		"dotenv": "^17.2.1",
		"express": "^4.18.0",
		"express-rate-limit": "^8.0.1",
		"express-session": "^1.17.3",
		"form-data": "^4.0.0",
		"jsonwebtoken": "^9.0.2",
		"mongodb-memory-server": "^10.2.0",
		"mongoose": "^7.6.0",
		"multer": "^2.0.2",
		"nodemailer": "^7.0.5",
		"stripe": "^18.4.0",
		"zod": "^3.25.73"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^8.35.1",
		"@typescript-eslint/parser": "^8.35.1",
		"eslint": "^8.57.1",
		"nodemon": "^3.1.10",
		"prettier": "^3.6.2"
	}
}
